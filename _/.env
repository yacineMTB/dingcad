# DingCAD Environment Configuration
# Default configuration values for the DingCAD project

# Build Configuration
TBB_DIR=
CMAKE_BUILD_TYPE=Release
CMAKE_PREFIX_PATH=

# Raylib Configuration
RAYLIB_DIR=
RAYLIB_SRC_DIR=

# Web Build Configuration (Emscripten)
EMSCRIPTEN_DIR=
RAYLIB_WEB_DIR=/tmp/raylib-web
RAYLIB_WEB_BUILD_DIR=/tmp/raylib-web/build

# Development Configuration
DEV_MODE=false
DEBUG=false
VERBOSE=false

# Library Configuration
LIBRARY_DIR=./library
LIBRARY_EXCLUDE_FOLDERS=util

# Web Server Configuration
WEB_PORT=8000
WEB_HOST=localhost

# Viewer Configuration
VIEWER_WIDTH=1280
VIEWER_HEIGHT=720
VIEWER_TITLE=dingcad
VIEWER_FPS=60

# Scene Configuration
SCENE_DEFAULT_PATH=./scene.js
SCENE_SEARCH_PATHS=./,$HOME

# Export Configuration
EXPORT_FORMAT=stl
EXPORT_DIR=./exports

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/dingcad.log
